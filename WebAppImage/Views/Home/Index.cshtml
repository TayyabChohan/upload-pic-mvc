@model IEnumerable<WebAppImage.Models.mYimage>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="~/Uploads/@item.Image" style="width:40px;height:40px" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Create", new { id=item.imageId }) |
            @Html.ActionLink("Details", "Details", new { id=item.imageId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.imageId })
        </td>
    </tr>
}

</table>
